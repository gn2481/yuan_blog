<div class="col-12">
  <h1>文章列表</h1>
</div>
<%= link_to "新增文章", new_post_path %>

<div class="col-12">
  <ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
      <%= link_to "編輯", edit_post_path(post) %>
      <%= link_to "刪除", post_path(post.id), method: 'delete', data: {confirm: '確認刪除嗎？'} %>
    </li>
    <% end %>
  </ul>
</div>
